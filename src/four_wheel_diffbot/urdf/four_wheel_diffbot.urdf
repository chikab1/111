<?xml version="1.0"?>
<robot name="four_wheel_diffbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- 底盘 -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.4 0.3 0.05"/></geometry>
      <origin xyz="0 0 0.05"/>
      <material name="gray"><color rgba="0.7 0.7 0.7 1"/></material>
    </visual>
  </link>

  <!-- 左前轮 -->
  <link name="left_front_wheel">
    <visual>
      <geometry><cylinder radius="0.05" length="0.02"/></geometry>
      <origin xyz="0.15 0.15 0.05" rpy="1.57 0 0"/>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
  </link>

  <!-- 左后轮 -->
  <link name="left_back_wheel">
    <visual>
      <geometry><cylinder radius="0.05" length="0.02"/></geometry>
      <origin xyz="-0.15 0.15 0.05" rpy="1.57 0 0"/>
    </visual>
  </link>

  <!-- 右前轮 -->
  <link name="right_front_wheel">
    <visual>
      <geometry><cylinder radius="0.05" length="0.02"/></geometry>
      <origin xyz="0.15 -0.15 0.05" rpy="1.57 0 0"/>
    </visual>
  </link>

  <!-- 右后轮 -->
  <link name="right_back_wheel">
    <visual>
      <geometry><cylinder radius="0.05" length="0.02"/></geometry>
      <origin xyz="-0.15 -0.15 0.05" rpy="1.57 0 0"/>
    </visual>
  </link>

  <!-- joints -->
  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_front_wheel"/>
    <origin xyz="0.15 0.15 0.05"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="left_back_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_back_wheel"/>
    <origin xyz="-0.15 0.15 0.05"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_front_wheel"/>
    <origin xyz="0.15 -0.15 0.05"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_back_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_back_wheel"/>
    <origin xyz="-0.15 -0.15 0.05"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Gazebo 插件 -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <rosDebugLevel>na</rosDebugLevel>
      <publishTF>true</publishTF>
      <publishOdom>true</publishOdom>
      <robotNamespace>/four_wheel_diffbot</robotNamespace>

      <leftJoint>left_front_wheel_joint</leftJoint>
      <leftJoint>left_back_wheel_joint</leftJoint>
      <rightJoint>right_front_wheel_joint</rightJoint>
      <rightJoint>right_back_wheel_joint</rightJoint>

      <wheelSeparation>0.3</wheelSeparation>
      <wheelDiameter>0.1</wheelDiameter>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
    </plugin>
  </gazebo>

</robot>

