<robot name="simple_test_car">

  <!-- 底盘 -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.20 0.146 0.05"/>
      </geometry>
      <material>
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.20 0.146 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"/>
    </inertial>
  </link>

  <!-- 前左轮 -->
  <link name="wheel_fl">
    <visual>
      <geometry>
        <cylinder radius="0.0375" length="0.02"/>
      </geometry>
      <material>
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  <joint name="joint_fl" type="revolute">
    <parent link="chassis"/>
    <child link="wheel_fl"/>
    <origin xyz="0.015 0.073 0.0375" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" velocity="10"/>
  </joint>

  <!-- 前右轮 -->
  <link name="wheel_fr">
    <visual>
      <geometry>
        <cylinder radius="0.0375" length="0.02"/>
      </geometry>
      <material>
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  <joint name="joint_fr" type="revolute">
    <parent link="chassis"/>
    <child link="wheel_fr"/>
    <origin xyz="0.015 -0.073 0.0375" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" velocity="10"/>
  </joint>

  <!-- 后左轮 -->
  <link name="wheel_rl">
    <visual>
      <geometry>
        <cylinder radius="0.0375" length="0.02"/>
      </geometry>
      <material>
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  <joint name="joint_rl" type="revolute">
    <parent link="chassis"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.015 0.073 0.0375" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" velocity="10"/>
  </joint>

  <!-- 后右轮 -->
  <link name="wheel_rr">
    <visual>
      <geometry>
        <cylinder radius="0.0375" length="0.02"/>
      </geometry>
      <material>
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  <joint name="joint_rr" type="revolute">
    <parent link="chassis"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.015 -0.073 0.0375" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" velocity="10"/>
  </joint>

</robot>

